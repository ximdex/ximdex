{
    "repositories": [
        {
            "type": "package",
            "package": {
                "name": "codemirror/Codemirror",
                "version": "4.7.0",
                "source": {
                    "url": "https://github.com/codemirror/CodeMirror.git",
                    "type": "git",
                    "reference": "origin/master"
                }
            }
        }
    ],
    "require": {
        "solarium/solarium": "3.2.0",
        "mnapoli/php-di": "4.4.2",
        "monolog/monolog": "1.11.0",
        "codemirror/Codemirror": "4.7.0",
        "stolz/assets": "dev-master",
        "werkint/jsmin": "dev-master"

    },
     "require-dev": {
        "phpunit/phpunit": "3.7.21",
        "mockery/mockery": "0.8.0"
    },

    "autoload": {
        "psr-0": { "Ximdex": "lib" }
    },
    "config": {
        "vendor-dir": "extensions/vendors/"
    }
}
